
class Person:

    def __init__(self, firstname="nombre", lastname="apellido", age=0, country="pais", city="cartagena"):
        self.firstname = firstname
        self.lastname = lastname
        self.age = age
        self.country = country
        self.city = city
    
    def obtenerinfo(self):
        return f"{self.firstname} {self.lastname} tiene {self.age} aÃ±os de edad y vive en {self.country}, {self.city}"
